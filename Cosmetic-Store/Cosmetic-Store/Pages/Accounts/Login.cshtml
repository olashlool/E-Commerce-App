@page
@model Cosmetic_Store.Pages.Accounts.LoginModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<section class="vh-100" style="background-color: #eee;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-xl-10">
        <div class="card" style="border-radius: 1rem;">
          <div class="row g-0">
            <div class="col-md-6 col-lg-5 d-none d-md-block">
              <img src="/images/CosmeticStore.jpg"
                alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
            </div>
            <div class="col-md-6 col-lg-7 d-flex align-items-center">
              <div class="card-body p-4 p-lg-5 text-black">

                <form method="post" action-page="/Accounts/Login">


                  <h1 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Sign into your account</h1>

                  <div class="form-outline mb-4">
                    <label asp-for="Login.UserName" class="form-label" >Username </label>
                    <input asp-for="Login.UserName" type="text" class="form-control form-control-lg" />
                    <span asp-validation-for="Login.UserName"></span>
                  </div>

                  <div class="form-outline mb-4">
                    <label asp-for="Login.Password" class="form-label">Password</label>
                    <input asp-for="Login.Password" type="password" class="form-control form-control-lg" />
                  </div>

                  <div class="pt-1 mb-4">
                    <button class="btn btn-dark btn-lg btn-block" type="submit">Login</button>
                  </div>

                  <a class="small text-muted" href="#!">Forgot password?</a>
                  <p class="mb-5 pb-lg-2" style="color: #393f81;">Don't have an account? <a asp-page="Register"
                      style="color: #393f81;">Register here</a></p>
                </form>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>










<div asp-validation-summary="All"></div>
