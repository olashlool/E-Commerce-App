@page
@model Cosmetic_Store.Pages.Accounts.RegisterModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<section class="vh-100" style="background-color: #eee;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-xl-10">
        <div class="card" style="border-radius: 1rem;">
          <div class="row g-0">
            <div class="col-md-6 col-lg-5 d-none d-md-block">
              <img src="/images/register.png"
                alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
            </div>
            <div class="col-md-6 col-lg-7 d-flex align-items-center">
              <div class="card-body p-4 p-lg-5 text-black">

                <form method="post">
                  <h1 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Sign up</h1>

                  <div class="form-outline mb-4">
                    <label asp-for="Register.UserName" class="form-label" >User Name</label>
                    <input asp-for="Register.UserName" type="text" class="form-control form-control-lg" />
                    <span asp-validation-for="Register.UserName"></span>
                  </div>
                  <div class="form-outline mb-4">
                    <label asp-for="Register.Email" class="form-label" >Email address</label>
                    <input asp-for="Register.Email" type="Email" class="form-control form-control-lg" />
                    <span asp-validation-for="Register.Email"></span>
                  </div>

                  <div class="form-outline mb-4">
                    <label asp-for="Register.Password" class="form-label">Password</label>
                    <input asp-for="Register.Password" type="password" class="form-control form-control-lg" />
                  </div>


                  <div class="pt-1 mb-4">
                    <button class="btn btn-dark btn-lg btn-block" type="submit">Register</button>
                  </div>

                  <p class="mb-5 pb-lg-2" style="color: #393f81;">Have an account?<a asp-page="Login"
                      style="color: #393f81;">Login here</a></p>
                </form>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<div asp-validation-summary="All"></div>
