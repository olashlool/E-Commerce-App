@model IEnumerable<Cosmetic_Store.Models.Category>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@if (signInManager.IsSignedIn(User) && User.IsInRole("Administrator"))
{
        <a style="color:aliceblue; position:fixed; right:25px; bottom:25px; background-color:forestgreen; height:50px;text-transform: uppercase;padding-top: 17px;" asp-controller = "Category" asp-action= "Create" class="btn btn-success"><i class="bi bi-plus-circle"></i> Create New Category</a>
}
<section style="background-color: #eee;">
  <div class="text-center container py-5">
    <h4 class="mt-4 mb-5"><strong>Bestsellers</strong></h4>

    <div class="row">
        @foreach (var item in Model)
            {
              <div class="col-lg-4 col-md-12 mb-4">
                <div class="card">
                  <div class="bg-image hover-zoom ripple ripple-surface ripple-surface-light"
                    data-mdb-ripple-color="light">
                    <img src="@item.Logo"
                      class="w-100" style="height:400px"/>
                    <a href="#!">
                      <div class="mask">
                        <div class="d-flex justify-content-start align-items-end h-100">
                          <h5><span class="badge bg-primary ms-2">New</span></h5>
                        </div>
                      </div>
                      <div class="hover-overlay">
                        <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
                      </div>
                    </a>
                  </div>
                  <div class="card-body">
                      <h2 class="card-title mb-3 ">@item.Name</h2>
                    <a asp-controller = "Category" asp-action= "Detail" asp-route-id ="@item.CategoryId" class="btn btn-info btn-lg">More Details</a>
                  </div>
                </div>
              </div>
            }
        </div>
      </div>
</section>
    

    