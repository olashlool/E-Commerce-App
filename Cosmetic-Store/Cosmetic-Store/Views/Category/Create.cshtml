@model Cosmetic_Store.Models.Category


<form class="form-horizontal" asp-controller="Category" asp-action="Create" method="post" style="padding-top:80px" enctype="multipart/form-data">
<fieldset>
<!-- Form Name -->
<legend>Create a new Category</legend>
  <partial name="_CategoryFields"></partial>

    <!-- Button -->
    <div class="form-group">
      <label class="col-md-4 control-label" for="singlebutton"></label>
      <div class="col-md-4">
            <button type="submit" class="btn btn-outline-success "> Create </button>
            <a asp-controller = "Category" asp-action= "Index"> Back</a>  </div>
    </div>
    
</fieldset>
</form>

<div asp-validation-summary="All"></div>