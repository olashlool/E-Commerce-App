@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Cosmetic_Store.Models.Category


<form class="form-horizontal" asp-controller="Category" asp-action="Edit" method="post" style="padding-top:80px" enctype="multipart/form-data">
   <input hidden asp-for="@Model.CategoryId"/>
    <fieldset>
        <!-- Form Name -->
      <legend>Edit Category</legend>
      <partial name="_CategoryFields"></partial>
    
        <!-- Button -->
        <div class="form-group">
          <label class="col-md-4 control-label" for="singlebutton"></label>
          <div class="col-md-4">
                <button type="submit" class="btn btn-outline-success "> Save </button>
                <a asp-controller = "Category" asp-action= "Index"> Back</a>  </div>
        </div>
        
    </fieldset>
</form>

<div asp-validation-summary="All"></div>