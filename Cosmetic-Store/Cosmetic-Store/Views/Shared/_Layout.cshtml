@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark fixed-top" >
      <div >
        <a class="navbar-brand" asp-controller="Category" asp-action="Index">
          <h1 style="color:aliceblue">Cosmetic Store</h1> 
        </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <h2><a class="nav-link" style="padding-top:10px" asp-controller="Category" asp-action="Index">Home <span class="sr-only"></span></a></h2>
        </li>
        <li class="nav-item">
          <h2><a class="nav-link" asp-controller="Product" asp-action="Index" style="padding-top:10px">Products</a></h2>
        </li>
      </ul>
    </div>
      </div>
    </nav>    
    <div>
        @RenderBody()
    </div>
</body>
</html>
