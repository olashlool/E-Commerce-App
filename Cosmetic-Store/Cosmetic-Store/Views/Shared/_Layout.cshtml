@using Cosmetic_Store.Auth.Model
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css">

</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark fixed-top" >
      <div >
        <a class="navbar-brand" href="/Catergories/Category">
          <h1 style="color:aliceblue">Cosmetic Store</h1> 
        </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <h2><a class="nav-link" style="padding-top:10px"  asp-controller="Category" asp-action="Index">Home <span class="sr-only"></span></a></h2>
        </li>
        <li class="nav-item">
          <h2><a class="nav-link" asp-controller="Product" asp-action="Index" style="padding-top:10px">Products</a></h2>
        </li>
           @if (SignInManager.IsSignedIn(User))
           {
               <li class="nav-item">
               <h2><a class="nav-link" href="#" style="padding-top:10px; position:absolute; top:10px; right:100px">Hello, @UserManager.GetUserName(User)!</a></h2>
               </li>
               <li class="nav-item">
               <form method="post" class="form-inline"  asp-controller="Account" asp-action="Logout" >
                  <button type="submit" class="btn nav-link" style="padding-top:10px; position:absolute; top:10px; right:15px"><h2>Logout</h2></button>
               </form>
               </li>
           }
           else
           {
               <li class="nav-item">
               <h2><a class="nav-link" href="/Accounts/Register" style="padding-top:10px; position:absolute; top:10px; right:100px">Sign Up</a></h2>
               </li>
               <li class="nav-item">
                 <h2><a class="nav-link" href="/Accounts/Login" style="padding-top:10px; position:absolute; top:10px; right:15px">Login</a></h2>
               </li>
           }

      </ul>
@*    <form class="form-inline my-2 my-lg-0">
      <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
      <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
    </form>*@
    </div>
      </div>
    </nav>   
    <div>
        @RenderBody()
    </div>
</body>
</html>
