@model IEnumerable<Cosmetic_Store.Models.CartProduct>

<div class="row" style="padding-top:65px">
    <h4>
        Cart
    </h4>
    <table class="table">
        <thead class="text-center">
            <tr>
                <th>
                    Item
                </th>

                <th>
                    Name
                </th>
                <th>
                    Quantity
                </th>
                <th>
                    Total
                </th>
            </tr>
        </thead>
        @if (@Model.Count() == 0)
        {
            <tbody>
                <tr class="text-center">
                    <td colspan="4">
                        Shopping Cart Is Empty
                    </td>
                </tr>
            </tbody>
        }
        else
        {
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td>
                            <img src="@Html.DisplayFor(modelItem => item.Product.ImageURL)" width="75" height="75"/>
                        </td>
                        <td>
                            @item.Product.Name
                        </td>
                        <td>
                            @item.Quantity
                        </td>
                        <td>
                            $ @(item.Quantity * item.Product.Price)
                        </td>
                    </tr>
                }
            </tbody>
        }
    </table>
</div>
