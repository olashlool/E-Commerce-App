@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Cosmetic_Store.Models.Product

<h3>Edit Product</h3>

<form class="form-horizontal" asp-controller="Product" asp-action="Create" method="post" style="padding-top:80px" enctype="multipart/form-data">
<fieldset>
<!-- Form Name -->
<legend>Edit Product</legend>
  <partial name="_ProductFields"></partial>

    <!-- Button -->
    <div class="form-group">
      <label class="col-md-4 control-label" for="singlebutton"></label>
      <div class="col-md-4">
            <button type="submit" class="btn btn-outline-success "> Save </button>
            <a asp-controller = "Product" asp-action= "Index"> Back</a>  </div>
    </div>
    
</fieldset>
</form>

<div asp-validation-summary="All"></div>