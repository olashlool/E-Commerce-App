    <h4 class="text-center mb-5"><strong>All Product</strong></h4>

    <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-12 mb-4">
                    <div class="bg-image hover-zoom ripple shadow-1-strong rounded">
