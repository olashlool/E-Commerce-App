@model IEnumerable<Cosmetic_Store.Models.Product>  
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@if (signInManager.IsSignedIn(User) && (User.IsInRole("Administrator")||User.IsInRole("Editor")))
{
    <a style="color:aliceblue; position:fixed; right:25px; bottom:25px; background-color:forestgreen; height:50px;text-transform: uppercase;padding-top: 17px;" asp-controller = "Product" asp-action= "Create" class="btn btn-success"><i class="bi bi-plus-circle"></i> Create New Product</a>
}
<section style="background-color: #eee;">
